<div class="table-responsive" id="tblAlbums" ng-controller="albumCtrl" ng-show="show == 'album'">
    <h1>Post List</h1>
    <table class="table">
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Action</th>
        </tr>
        <tr ng-repeat="oAlbum in albums">
            <td>{{ oAlbum.id }}</td>
            <td>{{ oAlbum.title }}</td>
            <td><a href="javascript:void(0);" ng-click="viewPhoto(oAlbum.id);">Photo List</a></td>
            <td></td>
        </tr>
    </table>
</div>
