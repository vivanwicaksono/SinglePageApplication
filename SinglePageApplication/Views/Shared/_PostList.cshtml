<div class="table-responsive" id="tblPost" ng-controller="postCtrl" ng-show="show == 'post'">
    <div class="breadcrumb">
        <a href="javascript:void(0)" ng-click="show = 'user'">Users</a> > Album list
    </div>
    <h1>Post List</h1>
    <a href="javascript:void(0);" ng-click="addPostDetail(oPost.id);">Add Post</a>
    <table class="table">
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Body</th>
            <th>Action</th>
        </tr>
        <tr ng-repeat="oPost in posts">
            <td>{{ oPost.id }}</td>
            <td>{{ oPost.title }}</td>
            <td>{{ oPost.body }}</td>
            <td>
                <a href="javascript:void(0);" ng-click="viewPostDetail(oPost.id);">View</a>
                    &nbsp;
                <a href="javascript:void(0);" ng-click="editPostDetail(oPost.id);">Edit</a>
                    &nbsp;
                <a href="javascript:void(0);" ng-click="deletePost(oPost.id, oPost.title);">Delete</a>
            </td>
        </tr>
    </table>
</div>