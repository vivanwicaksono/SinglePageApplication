<div class="table-responsive" id="tblPost" ng-controller="postCtrl" ng-show="show == 'post'">
    <h1>Post List</h1>
    <table class="table">
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Body</th>
            <th>Action</th>
        </tr>
        <tr ng-repeat="oPost in posts">
            <td>{{ oPost.id }}</td>
            <td>{{ oPost.title }}</td>
            <td>{{ oPost.body }}</td>
            <td><a href="javascript:void(0);" ng-click="viewPostDetail(oPost.id);">View Detail</a></td>
        </tr>
    </table>
</div>